<?xml version="1.0" encoding="UTF-8"?>

<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="AppTheme.Base"></style>


    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorTertiary">@color/text_primary</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:buttonStyle">@style/DefaultButton</item>
        <item name="android:editTextStyle">@style/DefaultEditText</item>
        <item name="editTextStyle">@style/DefaultEditText</item>
        <item name="windowActionBar">false</item>
        <item name="android:fontFamily">@font/iransansmobile</item>
        <item name="windowNoTitle">true</item>

    </style>


    <style name="AppTheme.Splash" parent="AppTheme.Base">
        <item name="android:windowBackground">@drawable/splash_background</item>

    </style>


    <style name="DefaultButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:stateListAnimator" tools:targetApi="21">@null</item>
        <item name="android:textAllCaps">false</item>

    </style>


    <style name="AccentedButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">@color/accent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:stateListAnimator">@null</item>

    </style>


    <style name="WhiteButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">@android:color/white</item>
        <item name="android:textColor">@color/text_primary</item>

    </style>


    <style name="DefaultEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="android:textColor">@color/text_primary</item>

    </style>


    <style name="CirclePageIndicator">
        <item name="vpi_centered">@bool/default_circle_indicator_centered</item>
        <item name="vpi_fillColor">@color/accent</item>
        <item name="vpi_pageColor">@color/default_circle_indicator_page_color</item>
        <item name="vpi_orientation">@integer/default_circle_indicator_orientation</item>
        <item name="vpi_radius">@dimen/default_circle_indicator_radius</item>
        <item name="vpi_snap">@bool/default_circle_indicator_snap</item>
        <item name="vpi_strokeColor">@color/default_circle_indicator_stroke_color</item>
        <item name="vpi_strokeWidth">@dimen/default_circle_indicator_stroke_width</item>

    </style>


    <style name="TextViewSelectorStyle">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_drop_down_white_24dp</item>

    </style>

</resources>